
@{ViewData["Title"] = "Order";}

<div class="container">
    <div class="row">
        <div class="col-lg-11">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <div class="panel-title">
                        <div class="row">
                            <div class="col-xs-6">
                                <h5><span class="glyphicon glyphicon-shopping-cart"></span> Shopping Cart</h5>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-xs-2">
                            <img class="img-responsive" src="http://placehold.it/100x100">
                        </div>
                        <div class="col-xs-4">
                            <h4 class="product-name strong">Product name</h4><h4><small>Product description</small></h4>
                        </div>
                        <div class="col-xs-6">
                            <div class="col-xs-6 text-right">
                                <h6 class="strong">25.00 <span class="text-muted">$</span></h6>
                            </div>
                            <div class="col-xs-2">
                                <input type="text" class="form-control input-group" value="1">
                            </div>

                            <div class="col-xs-2">
                                <button type="button" class="btn btn-danger">
                                    <span class="glyphicon glyphicon-trash"></span> Remove
                                </button>
                            </div>
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-xs-2">
                            <img class="img-responsive" src="http://placehold.it/100x100">
                        </div>
                        <div class="col-xs-4">
                            <h4 class="product-name strong">Product name</h4><h4><small>Product description</small></h4>
                        </div>
                        <div class="col-xs-6">
                            <div class="col-xs-6 text-right">
                                <h6 class="strong">25.00 <span class="text-muted">$</span></h6>
                            </div>
                            <div class="col-xs-2">
                                <input type="text" class="form-control input-group" value="1">
                            </div>
                            <div class="col-xs-2">
                                <button type="button" class="btn btn-danger">
                                    <span class="glyphicon glyphicon-trash"></span> Remove
                                </button>
                            </div>
                        </div>
                    </div>
                    <hr>
                </div>
                <div class="panel-footer">
                    <div class="row text-center">
                        <div class="col-xs-11">
                            <h4 class="text-right strong">Total $50.00</h4>
                        </div>
                    </div>
                </div>
                <div class="panel-footer">
                    <div class="row text-center">
                        <div class="col-xs-6">
                        </div>
                        <div class="col-xs-3">
                            <button type="button" class="btn btn-default btn-block">
                                <span class="glyphicon glyphicon-shopping-cart"></span> Continue Shopping
                            </button>
                        </div>
                        <div class="col-xs-3">
                            <button type="button" class="btn btn-success btn-block">
                                Checkout <span class="glyphicon glyphicon-play"></span>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

