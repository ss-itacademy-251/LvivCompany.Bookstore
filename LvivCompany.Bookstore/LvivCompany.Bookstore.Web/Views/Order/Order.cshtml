@model ListOrdersViewModel

@{ViewData["Title"] = "Order";}

<div class="container">
    <div class="row">
        <div class="col-lg-11">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <div class="panel-title">
                        <div class="row">
                            <div class="col-xs-5 text-center">
                                <h4><span>Item</span></h4>
                            </div>
                            <div class="col-xs-3">
                                <span> </span>
                            </div>
                            <div class="col-xs-1 text-center">
                                <h4><span>Quantity</span></h4>
                            </div>

                            <div class="col-xs-2">
                                <button type="button" class="btn btn-danger">
                                    <span class="glyphicon glyphicon-trash"></span> Remove
                                </button>
                            <div class="col-xs-1 text-right">
                                <h4><span>Price</span></h4>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- BEGIN PRODUCTS -->
                @{decimal totalPrice = 0;}

                @if (Model.Models.Count == 0)
                {
                    <h1>Shopping cart is Empty</h1>
                }
                else
                {
                    @foreach (var item in Model.Models)
                    {
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-xs-2">
                                    <img class="img-responsive" src="@item.ImageURL" />

                                </div>
                                <div class="col-xs-6">
                                    <h4 class="product-name strong">@item.BookName</h4>
                                    <h4><small>@item.Category</small></h4>
                                </div>
                                <div class="col-xs-4">
                                    <div class="col-xs-3">
                                        <input type="text" class="form-control input-group" value="1">
                                    </div>
                                    <div class="col-xs-3 text-right">
                                        <h6 class="strong">@item.Price.ToString(" 0.00")<span class="text-muted"> $</span></h6>
                                    </div>
                                    <div class="col-xs-5">
                                        <a class="btn btn-danger" asp-controller="Order" asp-action="RemoveFromOrder" asp-route-id="@item.BookId">Remove </a>
                                    </div>
                                </div>
                            </div>
                            <hr>
                        </div>
                        item.TotalPrice += item.Price;
                        totalPrice += item.TotalPrice;
                    }
                }
                <!-- END PRODUCTS -->

                <div class="panel-footer">
                    <div class="row text-center">
                        <div class="col-xs-11">
                            <h4 class="text-right strong">Total @totalPrice.ToString("0.00") $</h4>
                        </div>
                    </div>
                </div>
                <div class="panel-footer">
                    <div class="row text-center">
                        <div class="col-xs-6">
                        </div>
                        <div class="col-xs-3">
                            <a class="btn btn-default btn-block" asp-controller="Home" asp-action="Index">
                                <span class="glyphicon glyphicon-shopping-cart"></span> Continue Shopping
                            </a>
                        </div>
                        <div class="col-xs-3">
                            <button type="button" class="btn btn-success btn-block">
                                <i class="fa fa-circle-o-notch fa-spin"></i>
                                Checkout <span class="glyphicon glyphicon-play"></span>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>