
@model EditProfileViewModel


<div class="container">
    <div class="row">

        <div class="col-md-4 col-sm-4  col-xs-12 ">
            <div class="text-center">
                <img id="imgDisplayArea" src="@Model.Photo" class="avatar img-circle img-thumbnail img-profile" alt="avatar">

            </div>

            <div class="form-group col-md-10">
                <a class="btn btn-primary btn-block " asp-controller="Account" asp-action="Edit">Edit Information</a>
                <a class=" btn btn-primary btn-block " asp-controller="Order" asp-action="OrderHistory">Orders history</a>
                <a class=" btn btn-primary btn-block"  asp-controller="Account" asp-action="ChangePassword"> Change Password</a>

                @if (User.IsInRole("Seller"))
            {<a class=" btn btn-primary btn-block" asp-controller="Book" asp-action="AddBook">Add new book</a>
                        <a class=" btn btn-primary btn-block" asp-controller="Home" asp-action="SellersBook">My Books</a>}
            </div>


        </div>

        <div class="col-md-6 col-sm-6 col-xs-12 personal-info">
            <div class="panel panel-default ">
                <div class=" panel-heading">
                    <h3>Personal info</h3>
                </div>

                <div class="panel-body form-horizontal ">


                    <div class="form-group ">
                        <div class=" col-lg-6">
                            <span class="glyphicon glyphicon-user">

                                <label class="control-label">@Model.FirstName</label>
                                <label class="control-label">@Model.LastName</label>
                            </span>
                        </div>

                    </div>


                    <div class="form-group">

                        <div class="col-lg-6">
                            <span class=" glyphicon glyphicon-envelope">
                                <label class="control-label">@Model.Email</label>
                            </span>

                        </div>
                    </div>

                    <div class="form-group">

                        <div class="col-lg-6">
                            <span class=" glyphicon glyphicon-map-marker">
                                <label class="control-label">@Model.Address1</label>
                                <label class="control-label"> @Model.Address2</label>
                            </span>

                        </div>
                    </div>

                    <div class="form-group">

                        <div class="col-lg-6">
                            <span class="glyphicon glyphicon-phone-alt">
                                <label class="control-label">@Model.PhoneNumber</label>
                            </span>

                        </div>
                    </div>


                </div>

            </div>

        </div>
    </div>

</div>
@section Styles
    {
    <link href="~/css/site.css" rel="stylesheet" type="text/css" />
}